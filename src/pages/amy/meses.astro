---
import Layout from '../../layouts/generic.astro'
import Modal from '../../components/Modal.astro';
const sizeImage = 'c_fill,w_280,h_400,q_90,g_faces'
const sizeImageSlider = 'c_fill,w_870,h_650,q_90,g_faces'
import '@splidejs/splide/css';
import '@splidejs/splide/css/core';
---

<Layout>
  <main class="main">
    <section class="container_mylove">
      <h1>Andrey 💖 Ammi</h1>
      <p class="text_nuestro_amor">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maxime ratione officiis quia aut recusandae perferendis eius quo tempore amet nam minus, excepturi exercitationem quae eveniet corrupti, perspiciatis nostrum magnam necessitatibus.</p>
      <hr>
      <div class="slidersOne">
        <section id="splide1" class="splide" aria-label="Nuestro Noviazgo">
          <h2 id="carousel-heading">Nuestro Noviazgo</h2>
          <div class="splide__track">
            <ul class="splide__list">
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 1">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909106/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20220914_112536_363_irrxbm.webp` alt="Foto 2">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 3">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 4">
              </li>
            </ul>
          </div>
        </section>
      </div>
      <hr>
      <div class="slidersTwo">
        <section id="splide2" class="splide" aria-label="¿Quieres ser mi Novia?">
          <h2 id="carousel-heading2">¿Quieres ser mi Novia?</h2>
          <div class="splide__track">
            <ul class="splide__list">
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 1">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909106/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20220914_112536_363_irrxbm.webp` alt="Foto 2">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 3">
              </li>
              <li class="splide__slide">
                <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImageSlider}/v1685909107/John%20Serrano/Andrey%20-%20Ammi/nuestro-amor/IMG_20230102_115253_216_ewznay.webp` alt="Foto 4">
              </li>
            </ul>
          </div>
        </section>
      </div>
      <hr>
      <h2>Nuestros Hermosos Meses Juntos 💖</h2>
      <ul class="meses">
        <li class="mes mes1">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684700474/John%20Serrano/Andrey%20-%20Ammi/mes%201/20221218_210048_msfi3k.jpg` alt="mes-1">
          <footer class="footerMes">
            <p>Mes 1</p>
            <!-- <button>Ver más</button> -->
            <Modal id="dialog" open="Ver más">
              <main slot="main">
                <p class="motalText">Nuestro primer mes...</p>
                <hr />
                <img width="60" height="80" src="https://res.cloudinary.com/john-serrano/image/upload/v1684700473/John%20Serrano/Andrey%20-%20Ammi/mes%201/20221218_123403_gexvpz.jpg" alt="Foto 1">
              </main>
              <button slot="close">Cerrar</button>
            </Modal>
          </footer>
        </li>
        <li class="mes mes2">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684700714/John%20Serrano/Andrey%20-%20Ammi/mes%202/20230107_143748_urlrq6.jpg` alt="mes-2">
          <footer class="footerMes">
            <p>Mes 2</p>
            <button>Ver más</button>
          </footer>
        </li>
        <li class="mes mes3">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684701506/John%20Serrano/Andrey%20-%20Ammi/mes%203/IMG_20230213_142218_234_ilernp.jpg` alt="mes-3">
          <footer class="footerMes">
            <p>Mes 3</p>
            <button>Ver más</button>
          </footer>
        </li>
        <li class="mes mes4">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684701771/John%20Serrano/Andrey%20-%20Ammi/mes%204/IMG_20230311_195324_016_d4e8kr.webp` alt="mes-4">
          <footer class="footerMes">
            <p>Mes 4</p>
            <button>Ver más</button>
          </footer>
        </li>
        <li class="mes mes5">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684870064/John%20Serrano/Andrey%20-%20Ammi/mes%205/20230412_202612_txay1t.jpg` alt="mes-5">
          <footer class="footerMes">
            <p>Mes 5</p>
            <button>Ver más</button>
          </footer>
        </li>
        <li class="mes mes6">
          <img src=`https://res.cloudinary.com/john-serrano/image/upload/${sizeImage}/v1684870754/John%20Serrano/Andrey%20-%20Ammi/mes%206/20230512_202548_tqo1su.jpg` alt="mes-6">
          <footer class="footerMes">

            <p>Mes 6</p>
            <button>Ver más</button>
          </footer>
        </li>
      </ul>
    </section>
  </main>
</Layout>

<script>
  import Splide from '@splidejs/splide';
  import { Grid } from '@splidejs/splide-extension-grid';

  const splide1 = new Splide('#splide1', {
    type       : 'loop',
    height     : '25rem',
    perPage    : 2,
    perMove    : 1,
    gap: '10px',
    grid       : {
      // You can define rows/cols instead of dimensions.
      dimensions: [ [ 1, 1 ], [ 2, 2 ], [ 2, 1 ], [ 1, 2 ], [ 2, 2 ], [ 3, 2 ] ],
      gap: {
        row: '6px',
        col: '6px',
      },
    },
    breakpoints: {
      640: {
        height : '15rem',
        perPage: 1,
        grid   : {
          dimensions: [ [ 2, 2 ], [ 1, 1 ], [ 2, 1 ], [ 1, 2 ], [ 2, 2 ] ],
        },
      },
    },
  })

  const splide2 = new Splide('#splide2', {
    type   : 'loop',
    arrows: false,
    autoplay: true,
    interval: 4000
    // padding: '5rem'
  })

  splide1.mount({ Grid })
  splide2.mount()
</script>

<style>
  /* .splide__slide {
    margin-right: 2rem;
  } */
  .main {
    /* background-color: #002033;
    background-image: linear-gradient(160deg, #002033 0%, #050d47 100%); */
    background-color: #000814;
    background-image: linear-gradient(160deg, #000814 0%, #003566 100%);
    padding: 20px 0;
    height: 100%;
    min-height: 100vh;
  }
  h1 {
    font-size: 3rem;
    line-height: 3rem;
    font-weight: bold;
    color: #ffffff;
    text-align: center;
    margin: 0;
  }
  h2 {
    font-size: 2rem;
    line-height: 2rem;
    font-weight: bold;
    color: #ffffff;
    text-align: center;
    margin: 0 0 20px;
  }
  .container_mylove {
    max-width: 870px;
    margin: 0 auto;
    width: 100%;
  }
  /* https://coolors.co/palette/000814-001d3d-003566-ffc300-ffd60a */
  .meses {
    padding: 0;
    margin: 30px 0;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    justify-items: center;
    gap: 25px 10px;
  }
  .mes {
    /* width: 300px; */
  }
  .mes img {
    max-width: 280px;
    min-width: 280px;
    max-height: 400px;
    min-height: 400px;
    width: 100%;
    object-fit: cover;
  }
  .footerMes {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  p {
    color: #ffffff;
    text-align: center;
    margin: 8px 0;
    font-size: 1.5rem;
    font-weight: bold;
  }
  .motalText {
    color: #000814;
  }
  button {
    display: block;
    padding: 10px 18px;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 3px;
    border: none;
    background: #FFC300;
    color: #000814;
    cursor: pointer;
  }
  .slidersOne {
    margin: 30px auto;
  }

  .slidersTwo {
    margin: 0 auto 30px;
  }

  .splide__list li img {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
</style>