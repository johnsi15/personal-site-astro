---
import IconoGithub from './icons/icono-github.astro'
import IconoLinkedin from './icons/icono-linkedin.astro'
import IconoTwitter from './icons/icono-twitter.astro'
import IconoFacebook from './icons/icono-facebook.astro'
---

<ul class='social_list'>
  <li>
    <a href='https://github.com/johnsi15' aria-label='GitHub' target='_blank' rel='noreferrer'><IconoGithub /></a>
  </li>
  <li>
    <a href='https://www.linkedin.com/in/jandreys15' aria-label='Linkedin' target='_blank' rel='noreferrer'
      ><IconoLinkedin /></a
    >
  </li>
  <li>
    <a href='https://twitter.com/Jandrey15' aria-label='Twitter' target='_blank' rel='noreferrer'><IconoTwitter /></a>
  </li>
  <li>
    <a href='https://www.facebook.com/johnserrano15' aria-label='Facebook' target='_blank' rel='noreferrer'
      ><IconoFacebook /></a
    >
  </li>
</ul>

<style>
  .social_list {
    padding: 0;
    list-style: none;
    margin: 10px auto 0;
    display: flex;
    gap: 10px;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .social_list::after {
    content: '';
    position: absolute;
    height: 1px;
    display: inline-block;
    width: 130px;
    background-color: var(--color-white-opacity-70);
    left: 25px;
  }
  .social_list::before {
    content: '';
    position: absolute;
    height: 1px;
    display: inline-block;
    width: 130px;
    background-color: var(--color-white-opacity-70);
    right: 25px;
  }

  li {
    /* background: var(--color-blue-900); */
    height: 35px;
    width: 35px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    position: relative;
    transition: all 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  li:hover a {
    color: var(--color-blue-500);
  }
  li:hover {
    transform: translateY(-3px);
  }

  li a {
    text-decoration: none;
    color: var(--color-white);
    opacity: 0.7;
    display: flex;
  }

  li a::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
  }
</style>
