---
import Project from './Project.astro'
import { projects } from '@/helpers/conts'
---

<section class='more_projects'>
  <h6 data-aos='fade-up' data-aos-delay='50'>Otros Proyectos Destacados</h6>

  <ul class='project_list'>
    {
      projects
        .slice(0, 9)
        .map((project, idx) => (
          <Project
            title={project.title}
            description={project.description}
            link={project.link}
            externalLink={project.externalLink}
            githubLink={project.githubLink}
            techList={project.techList ?? []}
            data-aos='fade-up'
            data-aos-delay={50 + idx * 50}
          />
        ))
    }
  </ul>

  <a class='btn_see_more' href='/portafolio/proyectos'>Ver m√°s</a>
</section>

<script>
  import AOS from 'aos'
  import 'aos/dist/aos.css'

  AOS.init({
    // Global settings:
    disable: false, // accepts following values: 'phone', 'tablet', 'mobile', boolean, expression or function
    startEvent: 'DOMContentLoaded', // name of the event dispatched on the document, that AOS should initialize on
    initClassName: 'aos-init', // class applied after initialization
    animatedClassName: 'aos-animate', // class applied on animation
    useClassNames: false, // if true, will add content of `data-aos` as classes on scroll
    disableMutationObserver: false, // disables automatic mutations' detections (advanced)
    debounceDelay: 50, // the delay on debounce used while resizing window (advanced)
    throttleDelay: 99, // the delay on throttle used while scrolling the page (advanced)

    // Settings that can be overridden on per-element basis, by `data-aos-*` attributes:
    offset: 120, // offset (in px) from the original trigger point
    delay: 0, // values from 0 to 3000, with step 50ms
    duration: 400, // values from 0 to 3000, with step 50ms
    easing: 'ease-in-out', // default easing for AOS animations
    once: true, // whether animation should happen only once - while scrolling down
    mirror: false, // whether elements should animate out while scrolling past them
    anchorPlacement: 'top-bottom', // defines which position of the element regarding to window should trigger the animation
  })
</script>

<style>
  .more_projects {
    margin: 100px 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h6 {
    font-size: var(--font-size-large);
    color: var(--color-white);
    line-height: 2.3rem;
    margin: 0;
    text-wrap: balance;
    margin-bottom: 40px;
    text-align: center;
    font-weight: 700;
  }

  .project_list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 15px;
    position: relative;
  }

  .project_list li {
    transition: all 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  .project_list li:hover .project,
  .project_list li:focus-within .project {
    transform: translateY(-7px);
    box-shadow: 0 10px 30px -15px var(--color-blue-700);
  }

  .project_links {
    display: flex;
    align-items: center;
    -webkit-box-align: center;
    margin-right: -10px;
  }

  .project_links a {
    text-decoration: none;
    color: var(--color-white);
    opacity: 0.7;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    padding: 5px 7px;
    position: relative;
    z-index: 1;
  }

  .project_links a:hover,
  .project_links a:focus {
    color: var(--color-blue-500);
  }

  .project {
    background-color: var(--color-blue-900);
    padding: 30px 28px;
    box-sizing: border-box;
    flex-direction: column;
    align-items: flex-start;
    position: relative;
    border-radius: 4px;
    transition: all 0.3s;
    height: 100%;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    overflow: auto;
  }
  .project_top {
    display: flex;
    justify-content: space-between;
    -webkit-box-pack: justify;
    -webkit-box-align: center;
    align-items: center;
    margin-bottom: 30px;
  }

  .description {
    font-size: var(--font-size-normal);
    line-height: 1.3rem;
    color: var(--color-white-opacity-70);
    background-color: var(--color-blue-900);
  }

  .description p {
    margin: 0;
  }

  .title {
    font-size: var(--font-size-medium);
    line-height: 1.8rem;
    margin: 0 0 10px;
    font-weight: 700;
  }
  .title a {
    text-decoration: none;
    color: var(--color-white);
    position: static;
    display: inline-block;
    transition: all 0.3s;
  }
  .title a:hover {
    color: var(--color-blue-500);
  }
  .title a::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
  }
  .project_tech_list {
    padding: 0;
    list-style: none;
    display: flex;
    gap: 20px;
    color: var(--color-white-opacity-70);
    font-size: var(--font-size-small);
    margin: 25px 0 10px;
  }
  .folder {
    height: 40px;
  }
  .btn_see_more {
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 5px;
    background: transparent;
    border: 1px solid var(--color-blue-500);
    color: var(--color-blue-500);
    font-size: var(--font-size-medium-small);
    transition: all 0.3s;
    outline: none;
    display: inline-block;
    margin: 20px auto 0 auto;
  }
  .btn_see_more:hover {
    box-shadow: 4px 4px 0 0 var(--color-blue-500);
    transform: translate(-5px, -5px);
  }
  @media screen and (max-width: 768px) {
    .more_projects {
      margin: 55px auto;
    }
  }
</style>
