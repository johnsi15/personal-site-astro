---
import '@splidejs/splide/css'
import '@splidejs/splide/css/core'
import { projects } from '../../helpers/conts'

// Mapeo de proyectos con imágenes (ajusta según tus imágenes disponibles)
const projectImages: Record<string, string> = {
  'Top Autos': '/portafolio/projects/top-autos-project.webp',
  'Geeparts Ecommerce': '/servicios/works/work-1.webp',
  "Chica Q'hubo Cúcuta": '/servicios/works/chicaqhubo.webp',
  'Resultados Elecciones Regionales Colombia 2023': '/servicios/works/elecciones.webp',
  'Revista La Ó': '/servicios/works/la-o.webp',
  'Ingresos y Gastos': '/servicios/works/contabilidad.webp',
  'Portafolio para Clientes': '/servicios/works/module-portafolio.webp',
}

// Función para extraer el tipo de proyecto de la descripción
const getProjectType = (description: string): string => {
  if (description.toLowerCase().includes('tienda')) return 'Tienda en Línea'
  if (description.toLowerCase().includes('api')) return 'API REST'
  if (description.toLowerCase().includes('módulo')) return 'Módulo'
  if (description.toLowerCase().includes('aplicación')) return 'Aplicación Web'
  if (description.toLowerCase().includes('revista')) return 'Página Web'
  return 'Sitio Web'
}
---

<section class='trabajos' id='trabajos'>
  <div class='container_trabajos'>
    <h2>Trabajos completados</h2>
  </div>

  <div id='splide-works' class='splide' aria-label='Works'>
    <div class='splide__track'>
      <ul class='splide__list'>
        {
          projects.map(project => (
            <li class='splide__slide'>
              <a href={project.externalLink} target='_blank' rel='noopener noreferrer'>
                <img
                  src={projectImages[project.title] || '/servicios/works/default.webp'}
                  alt={project.title}
                  width='360'
                  height='380'
                  loading='lazy'
                />
                <h3 class='title'>{project.title}</h3>
                <p class='text'>{getProjectType(project.description)}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>

<script>
  import Splide from '@splidejs/splide'
  const splideWorks = new Splide('#splide-works', {
    type: 'loop',
    arrows: false,
    autoplay: true,
    interval: 4000,
    perPage: 5,
    perMove: 1,
    fixedWidth: '360px',
    gap: '3.7rem',
    breakpoints: {
      768: {
        // height: '400px',
        perPage: 1,
        fixedWidth: '100%',
        gap: 0,
      },
      1400: {
        perPage: 3,
        gap: '2rem',
      },
    },
  })
  splideWorks.mount()
</script>

<style>
  .trabajos {
    background-color: var(--background-color);
    /* height: 500px; */
    padding: 50px 0;
  }
  .trabajos .container_trabajos {
    max-width: var(--width);
    margin: 0 auto;
    width: 100%;
  }
  .trabajos h2 {
    color: var(--text-white);
    text-align: center;
    font-size: var(--font-size-lx);
    font-weight: 700;
    line-height: 2.8rem;
    margin: 0;
  }
  #splide-works {
    margin: 30px 0 0;
  }
  /* .trabajos ul {
    padding: 0;
    list-style: none;
    margin: 0;
  } */
  .trabajos ul a {
    text-decoration: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }
  .trabajos ul h3 {
    font-size: var(--font-size-m);
    color: var(--text-white);
    text-align: center;
    font-weight: 400;
    margin: 10px 0 5px;
  }
  .trabajos ul .text {
    color: var(--text-yellow);
    font-size: var(--font-size-sm);
    text-align: center;
    margin: 0;
  }

  .splide__list .splide__slide img {
    width: 100%;
    height: 380px;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .trabajos {
      height: auto;
    }
    .splide__list .splide__slide img {
      height: auto;
    }
    .trabajos h2 {
      margin: 0 10px;
    }
  }
</style>
