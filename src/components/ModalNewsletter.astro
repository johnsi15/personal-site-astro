---
const { id, open } = Astro.props
---

<!-- <button onclick={`window.${id}.showModal()`}>{open}</button> -->
<dialog id={id} onclick='window.event.target == this && this.close()'>
  <slot name='main' />
  <form method='dialog' class='absolute top-4 right-4 text-white hover:scale-110 transition-transform'>
    <slot name='close' />
  </form>
</dialog>

<style>
  dialog {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: max-content;
    margin: 0;
    padding: 0;
    background-color: transparent;
    border: none;
    overflow: hidden;
    z-index: 99;
  }
  dialog::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(0, 8, 20, 0.8);
  }
  button {
    display: block;
    padding: 10px 18px;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 3px;
    border: none;
    background: var(--background-color-one);
    color: var(--text-color-one);
    cursor: pointer;
  }
  /* @media screen and (max-width: 768px) {
