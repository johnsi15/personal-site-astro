---
import HeaderLink from './HeaderLink.astro'
import Hamburger from './Hamburger'
import Search from './Search'
---

<!-- https://github.com/withastro/astro/issues/5493 -->
<header class='Header'>
  <div class='header__menu container'>
    <Hamburger client:load />
    <nav class='nav'>
      <ul class='menu'>
        <li>
          <HeaderLink href='/'>John Serrano</HeaderLink>
        </li>
        <li>
          <HeaderLink href='/sobre-mi'>Sobre mi</HeaderLink>
        </li>
        <li>
          <HeaderLink href='/blog'>Blog</HeaderLink>
        </li>
        <li>
          <HeaderLink href='/tags/react'>React</HeaderLink>
        </li>
        <li>
          <HeaderLink href='/portafolio'>Portafolio</HeaderLink>
        </li>
        <li>
          <HeaderLink href='/servicios'>Servicios</HeaderLink>
        </li>
      </ul>
    </nav>
    <Search client:load />
  </div>
</header>

<script>
  const hamburger = document.querySelector('#Hamburger')
  const header = document.querySelector('.Header')

  if (hamburger) {
    const nav = document.querySelector('.Header nav')
    hamburger.addEventListener('click', e => {
      // console.log(e?.target)
      if (header && !header.classList.contains('active_header')) {
        header?.classList.add('active_header')
        nav?.classList.add('active_nav')
        document.body.style.overflowY = 'hidden'
      } else {
        header?.classList.remove('active_header')
        nav?.classList.remove('active_nav')
        document.body.style.overflowY = 'scroll'
      }
    })
  }

  let lastScrollTop = 0

  window.addEventListener('scroll', function () {
    let scrollTop = document.documentElement.scrollTop

    if (scrollTop > lastScrollTop) {
      // El scroll va hacia abajo
      header?.classList.remove('header_show')
      header?.classList.add('header_hidden')
    } else {
      // El scroll va hacia arriba
      header?.classList.remove('header_hidden')
      header?.classList.add('header_show')
    }

    if (scrollTop <= 0) {
      header?.classList.remove('header_show')
    }

    lastScrollTop = scrollTop <= 0 ? 0 : scrollTop // Asignar el valor actual a lastScrollTop
  })
</script>

<style>
  .Header {
    height: 70px;
    transform: translateY(0px);
    background-color: #000814;
    box-shadow: none;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 15;
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
    backdrop-filter: blur(10px);
  }

  .header__menu {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    height: 100%;
  }

  .nav {
    display: flex;
    align-items: center;
  }

  .menu {
    list-style: none;
    margin: 0 auto;
    padding: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 45px;
    width: calc((80px * 6));
  }

  .menu a {
    text-decoration: none;
    color: #ffffff;
    text-transform: capitalize;
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.6rem;
    transition: 0.2s;
  }

  .menu a:hover {
    color: #0078ae;
  }

  @media (prefers-reduced-motion: no-preference) {
    .header_hidden {
      height: 70px;
      transform: translateY(calc(70px * -1));
      box-shadow: 0 5px 30px -10px rgb(0 124 255 / 60%);
    }

    .header_show {
      height: 70px;
      transform: translateY(0px);
      box-shadow: 0 5px 30px -10px rgb(0 124 255 / 60%);
      background-color: rgb(0 8 20 / 85%);
    }
  }

  @media screen and (max-width: 768px) {
    .Header {
      position: fixed;
      top: 0;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      z-index: 19;
    }
    .active_header {
      position: fixed;
    }
    .nav {
      display: none;
      transition: 0.2s;
      position: fixed;
      left: 0;
      top: 50px;
      background: #1c1c1c;
      padding: 0;
      height: 100vh;
      width: 100vw;
      z-index: 20;
    }
    .active_nav {
      display: block;
    }
    .menu {
      flex-direction: column;
      margin: 0;
      height: 100vh;
      justify-content: center;
      width: 100%;
    }

    .menu li {
      margin: 0;
      padding: 15px 0;
      margin: 0;
      width: 100%;
    }
    .menu li:last-child {
      margin-bottom: 100px;
    }
    .menu a {
      display: block;
      text-align: center;
      width: 100%;
    }
  }
</style>
