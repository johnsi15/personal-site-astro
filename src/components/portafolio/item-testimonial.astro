---
interface Props {
  urlPhoto: string
  name: string
  description?: string
}

const { urlPhoto, name, description } = Astro.props
---

<li class='testimonial splide__slide'>
  <div class='photo'>
    <img src={urlPhoto} alt={name} width='100' height='100' loading='lazy' />
  </div>
  <div class='description'>
    <p>
      {description}
    </p>
    <span>{name}</span>
  </div>
</li>

<style>
  .testimonial {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 50px;
    justify-content: center;
    align-items: center;
    padding: 30px 35px;
    border: 1px solid var(--color-blue-500);
    border-radius: 4px;
    min-height: 220px;
    box-sizing: border-box;
    box-shadow: 0 10px 25px -15px var(--color-blue-700) inset;
  }

  .photo img {
    border-radius: 100%;
  }

  .description p {
    color: var(--color-white-opacity-70);
    font-size: var(--font-size-medium-text);
    line-height: 1.5rem;
    margin: 0 0 15px;
  }

  .description span {
    font-size: var(--font-size-normal);
    line-height: 1.3rem;
    font-weight: bold;
    color: var(--color-yellow);
  }

  @media screen and (max-width: 768px) {
    .testimonial {
      grid-template-columns: 1fr;
      gap: 10px;
      padding: 20px 15px;
      min-height: auto;
    }

    .description p {
      max-height: 200px;
      overflow-y: scroll;
    }

    .photo {
      justify-self: center;
    }
  }
</style>
